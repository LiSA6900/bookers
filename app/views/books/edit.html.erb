<body>
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="field">
     <p class="field-contents">Title</p>
     <%= f.text_field :title %>
    </div>
    <div class="field">
     <p class="field-contents">Body</p>
     <%= f.text_area :body %>
    </div>
    <div class="field">
     <p class="field-contents"><%= f.submit 'Update Book' %></p>
    </div>
  <% end %>
  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", "/books" %>
</body>