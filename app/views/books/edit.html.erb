<body>
  <h1>Editing Book</h1>
  <!--バリテーション設定のエラー表示-->
  <div class="error">
   <% if @book.errors.any? %>
     <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
     <ul>
       <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
    <% end %>
  </div>
  
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="field">
     <p class="field-contents">Title</p>
     <%= f.text_field :title %>
    </div>
    <div class="field">
     <p class="field-contents">Body</p>
     <%= f.text_area :body %>
    </div>
    <div class="field">
     <p class="field-contents"><%= f.submit 'Update Book' %></p>
    </div>
  <% end %>
  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", "/books" %>
</body>